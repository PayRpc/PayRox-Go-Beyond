{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "rootDir": "./",
    "noImplicitAny": false,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@tasks/*": ["./tasks/*"],
      "@scripts/*": ["./scripts/*"],
      "@test/*": ["./test/*"]
    }
  },
  "include": [
    "./scripts/**/*",
    "./test/**/*",
    "./tasks/**/*",
    "./hardhat.config.ts",
    "./src/**/*",
    "./typechain-types/**/*",
    "./cli/src/**/*",
    "./sdk/src/**/*",
    "./docs/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "artifacts",
    "cache",
    "coverage",
    "tools/ai-assistant/frontend",
    "typechain-types"
  ]
}
