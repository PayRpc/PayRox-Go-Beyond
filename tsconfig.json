{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./scripts/**/*",
    "./test/**/*",
    "./tasks/**/*",
    "./hardhat.config*.ts",
    "./cli/src/**/*",
    "./sdk/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "artifacts",
    "cache",
    "dist",
    "typechain-types"
  ]
}
