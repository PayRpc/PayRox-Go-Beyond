{
  "name": "@payrox/ai-assistant-backend",
  "version": "1.0.0",
  "description": "AI-powered smart contract modularization and deployment assistant",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:dev": "tsx scripts/start-backend.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:payrox": "tsx test-payrox-features.ts",
    "test:analyzers": "node test-analyzer-suite.js",
    "analyze:contract": "node src/analyzers/complete-analyzer-suite.js",
    "demo:professional": "node ultimate-demo.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "health-check": "curl -f http://localhost:3001/health || exit 1",
    "crash-protection": "tsx scripts/crash-protection-init.ts",
    "crash-protection:build": "tsc && node dist/scripts/crash-protection-init.js",
    "simple-protection": "tsx scripts/simple-crash-protection.ts",
    "templates:validate": "node src/analyzers/template-validator.js",
    "templates:simulate": "node src/analyzers/FacetSimulator.js",
    "facet:simulate": "tsx scripts/run-facet-simulator.ts",
    "must-fix:validate": "tsx scripts/must-fix-validator.ts",
    "payrox:compliance": "tsx scripts/payrox-compliance-check.ts",
    "ai:learn": "node test-ai-learning.js",
    "ai:generate": "node generate-refactored-files.js",
    "ai:validate": "node validate-fixes.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "@solidity-parser/parser": "^0.16.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^5.8.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "js-sha3": "^0.8.0",
    "keccak": "^3.0.4",
    "merkletreejs": "^0.3.11",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1",
    "solc": "^0.8.30",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/multer": "^1.4.9",
    "@types/node": "^20.8.10",
    "@types/uuid": "^9.0.6",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitest/ui": "^0.34.6",
    "eslint": "^8.53.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "solidity",
    "smart-contracts",
    "modularization",
    "ai",
    "blockchain",
    "ethereum",
    "payrox"
  ],
  "author": "PayRox Go Beyond Team",
  "license": "MIT"
}
