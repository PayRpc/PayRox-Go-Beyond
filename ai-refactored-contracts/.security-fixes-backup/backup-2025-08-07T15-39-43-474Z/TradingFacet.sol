        TradingFacetLayout storage l = _s();
        require(!l.initialized, "TradingFacet: already initialized");
        
        l._reentrancy = 1;  // Initialize reentrancy guard
        l.initialized = true;
        
        emit FacetInitialized(address(this), block.timestamp);
    }
    
