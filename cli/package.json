{
  "name": "@payrox/cli",
  "version": "1.0.0",
  "description": "PayRox Go Beyond Interactive CLI for Smart Contracts",
  "main": "dist/index.js",
  "bin": {
    "payrox": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "interactive": "npm run dev interactive",
    "ui": "npm run dev ui",
    "ai": "ts-node src/enhanced-cli-menu.ts start --ai",
    "demo": "ts-node src/enhanced-cli-menu.ts start --ai --network localhost",
    "ai:security": "cd ../ai-assistant/backend && npm run ai:auto-start",
    "ai:security:fix": "cd ../ai-assistant/backend && npm run ai:security-fix",
    "ai:security:analyze": "cd ../ai-assistant/backend && npm run mythril:smart",
    "ai:security:status": "cd ../ai-assistant/backend && node auto-start.js status"
  },
  "keywords": [
    "payrox",
    "blockchain",
    "cli",
    "smart-contracts",
    "hardhat"
  ],
  "author": "PayRox Team",
  "license": "MIT",
  "dependencies": {
    "commander": "^14.0.0",
    "readline": "^1.3.0",
    "inquirer": "^9.2.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.6",
    "@types/inquirer": "^9.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
